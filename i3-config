bindsym $mod+Shift+0 move container to workspace number $ws10

# lock screen
bindsym $mod+Shift+v exec "bash -c 'xautolock -enable; sleep 0.5; xautolock -locknow'"

# reload the configuration file
bindsym $mod+Shift+c reload
# open configuration file for editing
bindsym $mod+Shift+x exec --no-startup-id "/usr/bin/alacritty -e $EDITOR $HOME/develop/dotfiles/i3-config"
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode
        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

# launch commonly used applications
mode "launch" {
    bindsym a exec --no-startup-id "anki", layout tabbed, mode "default"
    bindsym c exec --no-startup-id "/usr/bin/alacritty -e ipython -i -c 'from math import *'", mode "default"
    bindsym d exec --no-startup-id $launcher, mode "default"
    bindsym f exec --no-startup-id "firefox", mode "default"
    bindsym n exec --no-startup-id "/usr/bin/alacritty -e calendar_cli --config ~/.config/calendar_cli/config.yaml add", mode "default"
    bindsym o exec --no-startup-id "$HOME/.bin/choose-file-and-open zathura pdf", mode "default"
	bindsym q exec --no-startup-id "systemctl poweroff", mode "default"
    bindsym r exec --no-startup-id "systemctl reboot", mode "default"
    bindsym t exec --no-startup-id "thunderbird", mode "default"
    bindsym v exec --no-startup-id "$HOME/.bin/choose-file-and-open vlc ''", mode "default"
    bindsym x exec --no-startup-id "killall Telegram Discord thunderbird liferea", mode "default"
    bindsym z exec --no-startup-id "zim", mode "default"
    bindsym Return exec --no-startup-id exec i3-sensible-terminal, mode "default"

    # back to normal: Enter or Escape or $mod+m
    bindsym Escape mode "default"
    bindsym $mod+m mode "default"

}

bindsym $mod+m mode "launch"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command .bin/i3status-wrapper
        mode hide
        position top
        font pango:DejaVu Sans Mono 12
        separator_symbol "  "
}

