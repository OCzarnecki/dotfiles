# Fix keyboard
bindsym Shift+$mod+f exec xset r rate 250 50

### Autostart ###
# Dim screen
#exec --no-startup-id xset dpms 0 0 1140 # 19 minutes
exec --no-startup-id xset s off

# Lock screen
exec --no-startup-id xautolock -time 20 -locker '$HOME/.bin/lock'

# Detect second monitor
exec --no-startup-id $HOME/.bin/hotplug-monitor-update

# Start with workspace 1: doesn't work for some reason
#exec --no-startup-id i3-msg workspace 1

# Enable compose key
# we'll do that somewhere else
#exec --no-startup-id setxkbmap -option compose:caps
exec --no-startup-id export GTK_IM_MODULE=xim # compose is provided by the x input manager, which GTK ignores by default

# Enable gesture handling
exec --no-startup-id easystroke

# Window-local language layout
exec --no-startup-id xkb-switch --i3

# Start up quiet and muted
exec --no-startup-id set-sink-mute @DEFAULT_SINK@ on && $refresh_i3status
exec --no-startup-id set-sink-volume @DEFAULT_SINK@ 15% && $refresh_i3status

# Update cmus cache
exec --no-startup-id .bin/update-cmus-cache
